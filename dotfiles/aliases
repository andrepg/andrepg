# Set up Laravel Sail and aliases
alias sail="vendor/bin/sail"
alias sat="sail artisan test"
alias sci="sail composer ide-helper"

# Set up Ollama management
alias start-llm="systemctl --user start ollama"
alias stop-llm="systemctl --user stop ollama"
alias oiu-start="systemctl --user start ollama-web"
alias oiu-stop="systemctl --user stop ollama-web"

# Handle Waydroid container services
alias wc-start="sudo waydroid container start"
alias wc-stop="sudo waydroid container stop"

# Handle Waydroid session services
alias ws-start="waydroid session start"
alias ws-stop="waydroid session stop"
